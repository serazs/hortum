-- BOT SPAWNER V1 (EXECUTOR VERSION)
local LP = game.Players.LocalPlayer
local RunService = game:GetService("RunService")
local botFolder = nil

-- UI OLUŞTURMA
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 200, 0, 120)
MainFrame.Position = UDim2.new(0.5, -100, 0, 50)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.Active = true
MainFrame.Draggable = true

local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "BOT SPAWNER V1"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

-- BOT SPAWN FONKSİYONU (CLIENT)
local function spawnBots()
    local char = LP.Character
    if not char or not char:FindFirstChild("HumanoidRootPart") then return end

    if botFolder then botFolder:Destroy() end
    botFolder = Instance.new("Folder", char)
    botFolder.Name = "PlayerBots"

    for i = 1, 10 do
        local bot = Instance.new("Model", botFolder)
        bot.Name = "Bot_"..i

        local root = Instance.new("Part", bot)
        root.Name = "HumanoidRootPart"
        root.Size = Vector3.new(2, 2, 1)
        root.Anchored = true
        root.CanCollide = false
        root.Material = Enum.Material.Neon
        root.Color = Color3.new(1, 0, 0) -- Kırmızı Botlar

        local hum = Instance.new("Humanoid", bot)

        local billboard = Instance.new("BillboardGui", root)
        billboard.Size = UDim2.new(0, 100, 0, 50)
        billboard.AlwaysOnTop = true
        billboard.Adornee = root
        billboard.ExtentsOffset = Vector3.new(0, 3, 0)

        local textLabel = Instance.new("TextLabel", billboard)
        textLabel.Size = UDim2.new(1, 0, 1, 0)
        textLabel.BackgroundTransparency = 1
        textLabel.Text = "Help me!"
        textLabel.TextColor3 = Color3.new(1, 1, 1)
        textLabel.TextScaled = true

        -- Takip Döngüsü
        task.spawn(function()
            while bot.Parent and char:FindFirstChild("HumanoidRootPart") do
                local offset = Vector3.new(math.sin(tick() + i) * 5, 2, math.cos(tick() + i) * 5)
                root.CFrame = CFrame.new(char.HumanoidRootPart.Position + offset)
                task.wait(0.01)
            end
        end)
    end
end

-- BUTON
local SpawnBtn = Instance.new("TextButton", MainFrame)
SpawnBtn.Size = UDim2.new(0, 180, 0, 40)
SpawnBtn.Position = UDim2.new(0, 10, 0, 40)
SpawnBtn.Text = "Botları Etrafıma Topla"
SpawnBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
SpawnBtn.TextColor3 = Color3.new(1, 1, 1)

SpawnBtn.MouseButton1Click:Connect(function()
    spawnBots()
end)

local CleanBtn = Instance.new("TextButton", MainFrame)
CleanBtn.Size = UDim2.new(0, 180, 0, 30)
CleanBtn.Position = UDim2.new(0, 10, 0, 85)
CleanBtn.Text = "Botları Sil"
CleanBtn.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
CleanBtn.TextColor3 = Color3.new(1, 1, 1)

CleanBtn.MouseButton1Click:Connect(function()
    if botFolder then botFolder:Destroy() end
end)
