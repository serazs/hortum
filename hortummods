local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "GHOST HORTUM V5 | ANTI-BYPASS",
   LoadingTitle = "Fizik Motoru Zorlanıyor...",
   LoadingSubtitle = "by serazs"
})

local LP = game.Players.LocalPlayer
local RS = game:GetService("RunService")
local tornadoActive = false
local range = 500 -- Çok uzak parçalar yerine orta mesafe (daha stabil)
local power = 50

local Tab = Window:CreateTab("Force Tornado", 4483345998)

Tab:CreateToggle({
   Name = "Hortumu Zorla (Aggressive)",
   CurrentValue = false,
   Callback = function(Value)
      tornadoActive = Value
   end,
})

-- FİZİK MOTORUNU KANDIRMA DÖNGÜSÜ
RS.Stepped:Connect(function()
    if tornadoActive then
        settings().Physics.AllowSleep = false -- Parçaların uyku moduna geçmesini engelle
        local char = LP.Character
        local root = char and char:FindFirstChild("HumanoidRootPart")
        
        if root then
            for _, v in pairs(workspace:GetDescendants()) do
                if v:IsA("BasePart") and not v.Anchored and not v:IsDescendantOf(char) then
                    local dist = (v.Position - root.Position).Magnitude
                    if dist < range then
                        -- NETWORK OWNERSHIP ZORLAMA
                        pcall(function()
                            v:SetNetworkOwner(LP) -- Parçayı senin kontrolüne alır
                            
                            local angle = tick() * 12
                            local targetPos = root.Position + Vector3.new(math.sin(angle) * 15, 5, math.cos(angle) * 15)
                            
                            -- BODY VELOCITY YERİNE DOĞRUDAN VELOCITY ATAMASI
                            v.Velocity = (targetPos - v.Position).Unit * power
                            v.RotVelocity = Vector3.new(0, 50, 0)
                        end)
                    end
                end
            end
        end
    end
end)
