local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "GHOST FLING V7 | TOUCH & FLY",
   LoadingTitle = "Fling Sistemi Hazırlanıyor...",
   LoadingSubtitle = "by serazs"
})

local LP = game.Players.LocalPlayer
local RS = game:GetService("RunService")
local flingActive = false
local power = 50000 -- Fırlatma gücü (Değen uzaya gider)

local Tab = Window:CreateTab("Fling Modu", 4483345998)

Tab:CreateToggle({
   Name = "Dokunanı Fırlat (Aç/Kapat)",
   CurrentValue = false,
   Callback = function(Value)
      flingActive = Value
   end,
})

-- FLING MOTORU (FİZİKSEL TEMAS)
RS.Stepped:Connect(function()
    if flingActive then
        local char = LP.Character
        local hrp = char and char:FindFirstChild("HumanoidRootPart")
        
        if hrp then
            -- Karakterin iç içe geçip ölmemesi için çarpışmayı kapat
            for _, v in pairs(char:GetDescendants()) do
                if v:IsA("BasePart") then
                    v.CanCollide = false
                end
            end
            
            -- Sadece HumanoidRootPart'ı delice döndür
            -- Bu hızla birine değdiğin an oyun motoru onu fırlatır
            hrp.Velocity = Vector3.new(power, power, power)
            hrp.RotVelocity = Vector3.new(0, power, 0)
        end
    end
end)

Rayfield:Notify({Title = "Sistem Hazır", Content = "Birine dokun ve uçuşu izle!", Duration = 5})
