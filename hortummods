local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "GHOST TORNADO V13 | FINAL",
   LoadingTitle = "Sistem Kontrol Ediliyor...",
   LoadingSubtitle = "by serazs"
})

local LP = game.Players.LocalPlayer
local RS = game:GetService("RunService")
local tornadoActive = false
local selectedVictim = ""

-- GÖRÜNMEZ "İTİCİ" PARÇA (Hortumu bu yapacak)
local SpinPart = Instance.new("Part")
SpinPart.Name = "SpinPart"
SpinPart.Size = Vector3.new(5, 5, 5)
SpinPart.Transparency = 1
SpinPart.CanCollide = false
SpinPart.Anchored = false
 SpinPart.Parent = workspace

local function getPlayers()
    local p = {}
    for _, v in pairs(game.Players:GetPlayers()) do
        if v ~= LP then table.insert(p, v.Name) end
    end
    return p
end

local Tab = Window:CreateTab("Hortum", 4483345998)

local Drop = Tab:CreateDropdown({
   Name = "Kurbanı Seç",
   Options = getPlayers(),
   CurrentOption = "",
   Callback = function(Option) selectedVictim = Option end,
})

Tab:CreateToggle({
   Name = "İnsanları Uçurmaya Başla",
   CurrentValue = false,
   Callback = function(Value) 
      tornadoActive = Value 
      if not Value then SpinPart.Velocity = Vector3.new(0,0,0) end
   end,
})

-- ANA DÖNGÜ
RS.Heartbeat:Connect(function()
    if tornadoActive and selectedVictim ~= "" then
        local victim = game.Players:FindFirstChild(selectedVictim)
        if victim and victim.Character and victim.Character:FindFirstChild("HumanoidRootPart") then
            local vRoot = victim.Character.HumanoidRootPart
            
            -- Görünmez parça kurbanın etrafında dönerken başkalarına çarpar
            local angle = tick() * 15
            SpinPart.CFrame = vRoot.CFrame * CFrame.new(math.sin(angle) * 10, 0, math.cos(angle) * 10)
            
            -- Fiziksel güç uygulayarak "Fling" etkisi yaratır
            SpinPart.Velocity = Vector3.new(5000, 5000, 5000)
            SpinPart.RotVelocity = Vector3.new(5000, 5000, 5000)
        end
    else
        SpinPart.CFrame = CFrame.new(0, -100, 0) -- Kapalıyken yerin altına at
    end
end)
